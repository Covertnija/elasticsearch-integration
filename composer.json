{
    "name": "covertnija/elasticsearch-integration",
    "version": "1.4.8",
    "description": "Symfony bundle for Elasticsearch integration with round-robin load balancing",
    "type": "symfony-bundle",
    "license": "MIT",
    "keywords": ["symfony", "elasticsearch", "bundle", "search", "load-balancing"],
    "authors": [
        {
            "name": "Domas Vysockis",
            "email": "leecher582@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "elasticsearch/elasticsearch": "^9.2",
        "monolog/monolog": "^3.0",
        "psr/log": "^3.0",
        "symfony/config": "^6.4 || ^7.0",
        "symfony/dependency-injection": "^6.4 || ^7.0",
        "symfony/http-client": "^6.4 || ^7.0",
        "symfony/http-kernel": "^6.4 || ^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-symfony": "^1.3",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpunit/phpunit": "^11.0",
        "roave/security-advisories": "dev-latest",
        "symfony/phpunit-bridge": "^6.4 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "ElasticsearchIntegration\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ElasticsearchIntegration\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse --memory-limit=1G",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "check": [
            "@test",
            "@phpstan",
            "@cs-check"
        ]
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "6.4.*|7.0.*|7.1.*|7.2.*"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
